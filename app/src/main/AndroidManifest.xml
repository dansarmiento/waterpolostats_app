<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="waterpolo_app"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WaterPoloApp"
        tools:targetApi="31">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="waterpolo_app"
            android:theme="@style/Theme.WaterPoloApp"> <!-- Ensure this theme is an AppCompat theme -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GamesActivity"
            android:exported="true"
            android:theme="@style/Theme.WaterPoloApp" /> <!-- Ensure this theme is an AppCompat theme -->

        <activity
            android:name=".AssignCapsActivity"
            android:exported="true"
            android:theme="@style/Theme.WaterPoloApp" /> <!-- Ensure this theme is an AppCompat theme -->

    </application>
</manifest>
